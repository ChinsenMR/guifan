page{
  background-color: #FFF;
}

.c-total{
  height: 230rpx;
  background: linear-gradient(#FF3333, #FF6666);
  color: #fff;
  font-size: 36rpx;
}

.c-total text:first-child{
  font-size: 70rpx;
  margin-bottom: 2rpx;
}

.c-nav{
  height: 110rpx;
  background-color: #FF3333;
  color: #fff;
  font-size: 24rpx;
}

.cn-item{
  position: relative
}

.cn-item::after{
  content: '';
  position: absolute;
  right: 0;
  top: 15rpx;
  height: 45rpx;
  width: 1rpx;
  background-color: #FF7575;
}

.cn-amount{
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.cu-header{
  color: #666;
  font-size: 30rpx;
  padding-left: 30rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  background-color: #F7F7F7;
}

.c-ul{
  margin-bottom: 100rpx;
}

.c-li{
  height: 126rpx;
  border-bottom: 1rpx solid #F4F4F4;
  padding: 0 30rpx;
}

.c-order{
  color: #333;
  font-size: 30rpx;
}

.c-tip{
  color: #666;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.c-time{
  color: #C5C3C3;
  font-size: 22rpx;
  margin-top: 3rpx;
}

.cu-amount{
  text-align: right;
  font-size: 34rpx;
  color: #FF3333;
}

.empty{
  color: #999;
  font-size: 28rpx;
  text-align: center;
  margin-top: 200rpx;
}