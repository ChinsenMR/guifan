/* packageA/pages/Directsuperiors/Directsuperiors.wxss */

.super {
  font-size: 30rpx;
  background: rgba(255, 255, 255, 1);
  width: 94%;
  margin: 25rpx auto;
  border-radius: 18rpx;
}

.contentop {
  display: flex;
  align-items: center;
  flex-direction: row;
  border-bottom: 1px solid #eee;
  padding: 27rpx;
  font-size: 30rpx;
  color:#333333;
  justify-content: space-between;
}

.contentop>image {
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  background: #f5f5f5;
  margin-right: 17rpx;
}

.name {
  height: 60rpx;
  border-bottom: 1px solid #eee;
  line-height: 60rpx;
  padding-left: 28rpx;
  padding: 10rpx;
  font-size: 30rpx;
  color:#666;
  margin-left: 10rpx;
}

.person {
  padding-left: 10rpx;
}

.emity{
  position: relative;
  text-align: center;
  top: 40%;
}
.text_info{
  margin-top: 10rpx;
  width: 100%;
  height: 300rpx;
  color:#666;
  margin-left: 10rpx;
}