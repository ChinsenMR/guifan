
.regulation{
    padding: 20rpx;
    background-color: #fff;
    font-size: 25rpx;
    color:#333;
  }
  /* 标题 */
  .explain_title,.rights_title {
    font-size: 30rpx;
    font-weight: 600;
    margin-bottom: 10rpx;
  }
  .rights_title{
  
  }
  /* 会员等级说明 */
  .explain_wrap{
    font-family:PingFang SC;
  }
  
  /* 会员图标 */
  .membership{
    display: flex;
    padding: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .membership_box{
    flex:1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .membership_img{
    width: 98rpx;
    height: 98rpx;
    display: flex;
    justify-content: center;
  }
  
  .membership_text{
    display:flex;
    flex-direction: column;
    align-items: center;
  }
  .text1{
    
  }
  .text2{
    font-size: 20rpx;
    color:#666;
  }
  
  .line_box{
    flex:1;
    width: 100%;
    height: 5rpx;
    background-color: #BEA057;
    margin-bottom: 50rpx;
  }
  
  
  /* 会员表格 */
  .rights_table{
    display:flex;
    border: 2rpx solid #000;
    padding: 5rpx;
    box-sizing: border-box;
    justify-content: space-between;
    margin-top: 20rpx;
    font-size: 25rpx;
  }
  .list_one{
    flex:1;
    border-right: 2rpx solid #000;
  }
  .list_two{
    flex:1;
    border-right: 2rpx solid #000;
  }
  .list_three{
    flex:1;
  }
  .line{
    text-align:center;
    border-bottom: 2rpx solid #000;
    padding: 5rpx;
    box-sizing: border-box;
  }
  .line:nth-last-child(1){
    border-bottom:none;
  }
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  