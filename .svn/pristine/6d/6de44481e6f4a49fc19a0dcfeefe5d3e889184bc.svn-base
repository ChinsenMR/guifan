.content-ul{
  padding: 31rpx;
}

.content-li{
  box-shadow: 0 4rpx 3rpx 0 rgba(153,153,153,0.05);
  margin-bottom: 21rpx;
  padding-bottom: 20rpx;
}

.content-li image{
  width: 187rpx;
  margin-right: 21rpx;
}

.goodsTitle{
  color: #333333;
  font-size: 28rpx;
}

.goodsTitle text{
  line-height: 30rpx;
  width: 80rpx;
  padding-bottom: 3rpx;
  box-sizing: border-box;
  text-align: center;
  border-radius: 4rpx;
  background-color: #FF3333;
  color: #fff;
  font-size: 18rpx;
  margin-right: 10rpx;
  display: inline-block;
}

.groupStatus{
  color: #FF3333;
  font-size: 18rpx;
  margin: 15rpx 0 25rpx 0;
}

.groupStatus progress{
  width: 180rpx;
}

.statusProgress{
  position: relative;
}

.statusProgress view{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 16rpx;
  color: #fff;
}

.groupStatus-n{
  width: 180rpx;
  line-height: 24rpx;
  text-align: center;
  background-color: #FF3333;
  border-radius: 4rpx;
  font-weight:500;
  font-size: 18rpx;
  color: #fff;
}

.groupStatus-s{
  width: 120rpx;
  line-height: 24rpx;  
  text-align: center;
  border: 1rpx solid #FF9999;
  border-radius: 12rpx;
  margin: 0 9rpx;
}

.groupStatus-i{
  width: 64rpx;
  line-height: 24rpx;  
  text-align: center;
  border: 1rpx solid #FF9999;
  border-radius: 12rpx;
}

.goodsPrice-l view:first-child text:first-child{
  color: #FF3333;
  font-size: 18rpx;
  font-weight:800;
}

.goodsPrice-l view:first-child text:last-child{
  color: #FF3333;
  font-size: 28rpx;
  margin-bottom: -4rpx;
  font-weight:800;
}

.goodsPrice-l view:last-child text:first-child{
  color: #999999;
  font-size: 16rpx;
  margin-left: 10rpx;
}

.goodsPrice-l view:last-child text:last-child{
  color: #999999;
  font-size: 16rpx;
  text-decoration: line-through;
  margin-left: 3rpx;
}

.goodsPrice-r{
  width: 158rpx;
  height:44rpx;
  background: linear-gradient(86deg,rgba(255,51,51,1) 0%,rgba(255,102,102,1) 100%);
  border-radius: 22rpx;
  color: #fff;
  font-size: 28rpx;
}