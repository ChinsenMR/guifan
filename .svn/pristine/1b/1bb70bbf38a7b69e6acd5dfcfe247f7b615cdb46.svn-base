page {
  background-color: #fff;
}

.bind-phone {
  padding: 190rpx 50rpx;

  .title {
    font-size: 44rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    line-height: 62rpx;
  }

  .tip {
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 33rpx;
    margin-top: 14rpx;
  }

  .input-box {
    margin: 46rpx 0 46rpx 0;
    padding: 15rpx 0;
    border-bottom: 1px solid #eee;

    &-title {
      font-size: 28rpx;
      margin-right: 30rpx;
      width: 120rpx;
    }

    input,
    .input-placeholder {
      font-size: 32rpx;
      font-family: PingFangSC-Regular, PingFang SC;
      font-weight: 400;
      color: rgba(153, 153, 153, 1);
      line-height: 45rpx;
    }
  }

  .submit {
    background: rgba(238, 238, 238, 1);
    border-radius: 40rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
  }

  .send-code {
    font-size: 24rpx;
  }

  .text-active {
    color: rgba(255, 68, 68, 1);
  }

  .active {
    background: rgba(255, 68, 68, 1);
    color: #fff;
  }
}