.layout{
  position: relative;
  background-color: #F4F4F4;
  height: 100%;
}

.navBar{
  height: 88rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
  color: #666;
  font-size: 28rpx;
  padding-left: 28rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

.navBar text{
  line-height: 88rpx;
  margin-right: 100rpx;
  position: relative;
}

.navBar text.active{
  color: #FD4851;
}

.active::after{
  position: absolute;
  content: '';
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 4rpx;
  background-color: #FD4851;
}

.content-ul{
  padding-bottom: 50rpx;
  margin-top: 100rpx;
  box-sizing: border-box;
}

.content-li{
  background-color: #fff;
  margin-bottom: 20rpx;
}

.order-inner {
  color: #999999;
  font-size: 21rpx;
  padding: 30rpx 28rpx 50rpx 28rpx;
  border-bottom: 1rpx solid #F4F4F4;
}

.order-inner view{
  margin-bottom: 8rpx;
}

.order-code text:last-child{
  color: #FF3333;
}

.order-price text:last-child{
  color: #FF3333;
}

.employ-price view:last-child{
  margin-left: 15rpx;
}

.employ-price text:last-child{
  color: #FF9900;
}

.goodsInfo{
  background-color: #fff;
  padding: 28rpx;
  border-bottom: 1rpx solid #F4F4F4;
}

.goodsInfo image{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius:6rpx;
}

.goods-title text:first-child{
  color: #333333;
  font-size: 26rpx;
  width: 388rpx;
}

.goods-title text:last-child{
  color: #666666;
  font-size: 24rpx;
}

.goodsInfo-inner view:last-child{
  color: #999999;
  font-size: 20rpx;
  margin-top: 8rpx;
}

.goodsPrice{
  color: #666666;
  font-size: 26rpx;
  height: 80rpx;
  padding-right: 28rpx;
}

.goodsPrice text:last-child{
  margin-left: 30rpx;
}
.emity{
  left: 0;
  right: 0;
  position: absolute;
  top: 40%;
  font-size: 35rpx;
  text-align: center;
}