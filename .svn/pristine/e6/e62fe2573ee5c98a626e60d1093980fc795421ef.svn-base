@import "../../../app.wxss";

.swiper-item{
  width: 250rpx;
  margin-right: 25rpx;
  background-color: coral;
  display: inline-block;
  border-radius: 8rpx;
  background-color: #fff;
}
.swiper-item .product_image{
  width:236rpx;
  height:236rpx;
}
.swiper-item .product_image img{
  width:100%;
}
.product_title{
  width: 100%;
  margin: 25rpx auto;
  text-align: center;
}
.product_name{
  width: 240rpx;
  font-size: 28rpx;
  color: #333333;
  font-family:'PingFang SC';
  line-height: 60rpx;
}
.product_price{
  font-family:'PingFang SC';
  color: #FE5722;
  font-size: 28rpx;
  margin-right: 8rpx;
  line-height: 50rpx;
}