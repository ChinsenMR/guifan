@import "../../../app.wxss";
.product_list{
  margin-bottom: 25rpx;
}

.swiper-item{
  width: 342rpx;
  margin-right: 20rpx;
  display: inline-block;
  border-radius: 8rpx;
  background-color: #fff;
  margin-left: 15rpx;
}
.swiper-item .product_image{
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center; 
  width:100%;
  min-height:236rpx;
}
.swiper-item .product_image img{
  width:100%;
}
.product_title{
  width: 100%;
  margin: 25rpx auto;
  text-align: center;
}
.product_name{
  width: 240rpx;
  font-size: 28rpx;
  padding: 10rpx 15rpx;
  color: #333333;
  font-family:'PingFang SC';
  line-height: 60rpx;
}
.product_price{
  font-family:'PingFang SC';
  color: #FE5722;
  font-size: 28rpx;
  margin-right: 8rpx;
  line-height: 50rpx;
}