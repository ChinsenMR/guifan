/* pages/commodityevaluation/commodityevaluation.wxss */
page{
   width: 100%;
   overflow-y: scroll;
   overflow-x: hidden;
}
#box{
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
  background: #F7F7F7;
}
.topTitleBox {
  width: 100%;
  background: #FFF;
  display: flex;
  /* align-content: center */
  position: relative;
  align-items: center;
  padding: 22rpx 26rpx; 
  box-sizing: border-box;

}
.topList {
  background: #FFF;
  color: #FF4444;
  display: flex;
  /* align-content: center */
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border-radius: 20rpx;
  padding: 5rpx 23rpx;
  min-width: 120rpx;
  margin-right: 18rpx;
  border: 1px solid #FF4444;
}
.evaluateBox {
  width: 100%;
  margin-top: 18rpx;
  flex: 1;
  overflow: auto;
  background: red;
  box-sizing: border-box;
}
.evaluateListBox {
  padding: 26rpx 26rpx 0rpx 26rpx;
  background: #FFF;
}
.evaluateUserMsgBox {
  flex: 1;
  display: flex;
  align-items: center;
}
.userhand {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.userNameBox{
  flex: 1;
  padding-left: 20rpx;
}
.username {
  font-size: 22rpx;
  margin-bottom: 8rpx;
  color: #333333;
}
.userlevel {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5rpx 5rpx;
  background: #FFCECE;
  color: #FF2222;
  max-width: 100rpx;
  /* display: inline-block; */
  border-radius: 20rpx;
  font-size: 18rpx;
  border: 1rpx solid #FF2222;
}
.startBox{
  display: flex;

}
.startBox image{
  width: 26rpx;
  height: 24rpx;
}
.evaluateContenBox {
   padding: 18rpx 40rpx 24rpx 26rpx;
}
.evaluateConten{
  color: #666666;
  font-size: 22rpx;
}
.evaluateImgBox {
  display: flex;
  padding: 20rpx 0rpx;
  align-content: center;
}
.evaluateImgBox image{
  
  /* width: 110rpx; */
  width: 20%;
  margin-right: 20rpx;
  height: 110rpx;
}
.evaluateTime {
  font-size: 22rpx;
  color: #999999;

}