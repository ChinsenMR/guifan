/* packageA/pages/Directsuperiors/Directsuperiors.wxss */

#super {
  font-size: 30rpx;
  background: rgba(255, 255, 255, 1);
}

.contentop {
  height: 99rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid gainsboro;
  padding: 27rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color:#333333;
}

.contentop>image {
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  background: red;
  margin-right: 17rpx;
}

.name {
  height: 60rpx;
  border-bottom: 1px solid gainsboro;
  line-height: 60rpx;
  padding-left: 28rpx;
  padding: 10rpx;
  font-size: 30rpx;
  color:#666;
  margin-left: 10rpx;
}

.person {
  padding-left: 10rpx;
}

.emity{
  position: relative;
  text-align: center;
  top: 40%;
}
.text_info{
  margin-top: 10rpx;
  width: 100%;
  height: 300rpx;
  color:#666;
  margin-left: 10rpx;
}