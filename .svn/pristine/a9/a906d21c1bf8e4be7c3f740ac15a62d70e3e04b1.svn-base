.layout {
  background-color: #F7F7F7;
  padding: 30rpx;
}

.group-top {
  background-color: #fff;
}

.group-topH {
  height: 188rpx;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1rpx solid #E5E5E5;
}

.group-topH image:first-child {
  width: 128rpx;
  margin-right: 16rpx;
}

.group-title {
  color: #333333;
  font-size: 26rpx;
  width: 410rpx;
}

.group-type {
  width: 320rpx;
  height: 30rpx;
  color: #FF2222;
  font-size: 22rpx;
  background-color: #FFEEEE;
  padding: 0 5rpx;
  margin-top: 5rpx;
}

.look_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 50rpx;
}

/* 两人团按钮 */
.sth_wrap {
  width: 90rpx;
  /* padding: 5rpx; */
  height: 35rpx;
  box-sizing: border-box;
  line-height: 35rpx;
  background-color: #FF4444;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  border-radius: 17.5rpx;
}

.group-price {
  color: #FF4444;
  font-size: 28rpx;
  margin-left: 150rpx;
}

.group-price2 {
  color: #666666;
  font-size: 22rpx;
  margin-right: 60rpx;
  text-decoration: line-through;

}

.group-topH image:last-child {
  width: 104rpx;
  margin-right: 16rpx;
  position: absolute;
  /* bottom: -20rpx; */
  right: 30rpx;
}

.userImg {
  width: 86rpx;
  height: 86rpx;
  box-sizing: border-box;
  padding: 5rpx;
  border: 1rpx solid #FF4444;
  border-radius: 50%;
  position: relative;
  margin-right: 44rpx;
}

.userImg:last-child {
  margin-right: 0;
}

.group-bottom {
  padding: 50rpx;
  text-align: center;
}

.group-bottomImg image {
  width: 76rpx;
  border-radius: 50%;
}

.userType {
  position: relative;
}

.userImg.userType::after {
  position: absolute;
  bottom: -3rpx;
  left: 10rpx;
  content: "团长";
  line-height: 30rpx;
  width: 66rpx;
  text-align: center;
  border-radius: 30rpx;
  color: #fff;
  font-size: 20rpx;
  background-color: #FF4444;
}

.group-state {
  color: #FF3838;
  font-size: 28rpx;
  margin-top: 50rpx;
  text-align: center;
}

.group-bottomBtn {
  width: 330rpx;
  line-height: 88rpx;
  text-align: center;
  background: #FF3838;
  border-radius: 44rpx;
  color: #fff;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.step {
  margin-top: 20rpx;
  background-color: #fff;
  padding-bottom: 45rpx;
}

.title {
  height: 88rpx;
  color: #333333;
  font-size: 30rpx;
  background-color: #fff;
  padding: 0 30rpx;
  font-weight: bold;
}

.step-inner {
  height: 88rpx;
  background-color: #fff;
  padding: 0 30rpx;
}

.step-item view:first-child {
  width: 31rpx;
  line-height: 31rpx;
  text-align: center;
  border-radius: 50%;
  border: 2rpx solid #FF3838;
  color: #FF3838;
  font-size: 21rpx;
  margin-right: 15rpx;
}

.step-item view:last-child {
  color: #FF3838;
  font-size: 24rpx;
}

.step-item.group-fail view:first-child {
  border: 2rpx solid #666;
  color: #666;
}

.step-item.group-fail view:last-child {
  color: #666;
}

.step-line {
  position: relative;
}

.step-line::after {
  position: absolute;
  left: 0;
  right: 0;
  top: -34rpx;
  content: '';
  width: 1rpx;
  height: 65rpx;
  background-color: #E5E5E5;
  transform: rotate(20deg);
}

.stepBtn text {
  width: 330rpx;
  height: 64rpx;
  border: 1rpx solid #FF6666;
  border-radius: 32rpx;
  color: #FF6666;
  font-size: 28rpx;
  margin-top: 75rpx;
}

.title_wrap {
  margin-top: 20rpx;
  font-size: 26rpx;
}

.nums {
  color: #ff4444;

}

.btn_wrap {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.btn_search {
  width: 200rpx;
  height: 50rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #FF4444;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #fff;
  margin: 0 15rpx 15rpx 0;
  background-color: #FF4444;
}

.btn_search:nth-child(1) {
  color: #FF4444;
  background-color: #fff;
  margin-right: 30rpx;
}

.btn_search:nth-child(3) {
  margin-right: 30rpx;
}

.btnActive {
  color: #ff4444;
}

.time_wrap {
  margin-bottom: 10rpx;
  width: 150rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 22rpx;
  line-height: 44rpx;
}

.time_test {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.step-item-2 {
  color: #333333;
}