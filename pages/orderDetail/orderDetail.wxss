.layout {
  background-color: #f4f4f4;
}

.header {
  position: relative;
}

.header-c {
  position: absolute;
  top: 35rpx;
  left: 58rpx;
  color: #fff;
  font-size: 28rpx;
}

.header-c image {
  width: 44rpx;
  margin-right: 35rpx;
}

.userInfo {
  background-color: #fff;
  z-index: 10;
  position: relative;
  border-radius: 6rpx;
  padding: 32rpx 24rpx;
  margin: 24rpx auto;
}
.apply-aftersale {
  font-size: 24rpx;
  font-size: 24rpx;
  margin: 0;
  color: #333;
  border: 1px solid #333;
  height: 45rpx;
  line-height: 45rpx;
  /* margin-right: 180rpx; */
}
.userInfo image:first-of-type {
  width: 50rpx;
}

.userInfo image:last-of-type {
  width: 30rpx;
}

.userInfo-inner {
  padding-left: 30rpx;
  padding-right: 80rpx;
}

.userInfo-innerT text:first-child {
  color: #333333;
  font-size: 28rpx;
}

.userInfo-innerT text:last-child {
  color: #666666;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.userInfo-innerB {
  color: #666666;
  font-size: 24rpx;
  margin-top: 15rpx;
}

.storeList {
  background-color: #fff;
  margin-bottom: 24rpx;
}

.storeName {
  height: 88rpx;
  padding-left: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.storeName image {
  width: 35rpx;
}

.storeName text {
  color: #333333;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.goodsList {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.goodsList image {
  width: 128rpx;
  margin-right: 20rpx;
  margin-left: 30rpx;
}

.goodsName {
  color: #333333;
  font-size: 26rpx;
  width: 410rpx;
}

.goodsType {
  background-color: #ffeeee;
  color: #ff2222;
  font-size: 22rpx;
  margin-top: 5rpx;
  padding: 3rpx 10rpx;
  display: inline-block;
}

.goodsPrice {
  margin-top: 15rpx;
}

.goodsPrice text:first-of-type {
  color: #ff4444;
  font-size: 28rpx;

}

.goodsPrice text:last-of-type {
  color: #999999;
  font-size: 26rpx;
}

.totalPrice {
  height: 88rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.totalPrice text:first-child {
  color: #333333;
  font-size: 26rpx;
  margin-right: 20rpx;
}

.totalPrice text:last-child {
  color: #ff4444;
  font-size: 28rpx;
  margin-right: 30rpx;
}

.realityPrice {
  height: 88rpx;
}

.realityPrice text:nth-child(1) {
  color: #333333;
  font-size: 26rpx;
}

.realityPrice text:nth-child(2) {
  color: #ff4444;
  font-size: 28rpx;
}

.realityPrice text:nth-child(3) {
  color: #999999;
  font-size: 22rpx;
  margin-left: 15rpx;
  margin-right: 30rpx;
}

.orderInfo {
  background-color: #fff;
}

.orderInfo > view {
  height: 68rpx;
  padding: 0 30rpx;
}

.orderInfo > view:last-of-type {
  border: 0;
}

.orderInfo-title {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
}

.orderInfo-code view:first-child {
  color: #333333;
  font-size: 26rpx;
}

.orderInfo-code view:last-child text:first-child {
  color: #666666;
  font-size: 26rpx;
}

.orderInfo-code view:last-child text:last-child {
  color: #479eff;
  font-size: 26rpx;
  width: 108rpx;
  line-height: 62rpx;
  text-align: center;
  margin-left: 20rpx;
}

.orderInfo-time view:first-child {
  color: #666666;
  font-size: 26rpx;
}

.orderInfo-time view:last-child {
  color: #999999;
  font-size: 26rpx;
}

.orderInfo-time view:last-child text:last-child {
  margin-left: 10rpx;
}
