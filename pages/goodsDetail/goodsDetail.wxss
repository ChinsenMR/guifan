.layout {
  background-color: #f7f7f7;
}
page, view{
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}
.nav {
  padding: 0 30rpx;
  line-height: 100rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 999;
}

.nav image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 9rpx;
}

.topTab {
  font-size: 30rpx;
  color: #000;
  flex: 1;
  padding: 0 160rpx;
}

.empty {
  width: 100rpx;
}

.activeTab {
  color: #f44;
  position: relative;
}

.activeTab::after {
  position: absolute;
  bottom: 6rpx;
  left: 7rpx;
  right: 7rpx;
  content: '';
  height: 6rpx;
  background-color: #f44;
}

swiper-item, swiper {
  height: 750rpx;
  width: 100%;
}

.banner {
  position: relative;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.banner-user {
  color: #fff;
  font-size: 22rpx;
  position: absolute;
  top: 40rpx;
  left: 30rpx;
  width: 320rpx;
  height: 90rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 45rpx;
  padding-left: 8rpx;
}

.banner-user view{
  height: 90rpx;
}

.banner-user image {
  width: 76rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.banner-user text:first-of-type {
  margin-right: 10rpx;
}

