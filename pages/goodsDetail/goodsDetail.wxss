.yyemity{
  height: 14%;
}
.productExAttr{
  background-color: #fff;
  padding: 30rpx;
}

.productExAttrItem_list{
  display: flex;
  flex-direction: row;
  width: 90%;
  margin: 10rpx auto;
}

.productExAttrItem_list .attrname{
  font-size: 28rpx;
  color: #333;
  padding-right: 25rpx;
}
.productExAttrItem_list .extAttrValue{
  font-size: 26rpx;
  color: #666;
  padding-right: 25rpx;
}
.submitBtn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 0;
  color: #fff;
  font-size: 30rpx;
  background-color: #f44;
}

.messages_list{
  border-radius: 16rpx;
  padding: 20rpx;
  background-color: #fff;
  width: 90%;
  margin:24rpx auto 0;
}
.message_title{
  padding: 25rpx;
  color: #333;
  font-size: 30rpx;
}

.message_content{
  padding: 25rpx 0;
  color: #333;
  font-size: 28rpx;
}
.consult_title{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.consult_info{
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  margin-left: 15rpx;
}

.show_popup{
  position: fixed;
  bottom: 20%;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #ff6433;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 100;
  font-size: 20rpx;
}

.UserHead{
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
}
.UserHead .UserName{

}
.UserHead image{
  width: 100%;
  height:100%;
  border-radius: 50%;
}

.UserName{
  font-size: 28rpx;
  color: #333;

}

.consultation_date, .answer_time{
  color: #999;
  font-size: 24rpx;
  margin-top: 15rpx;
}

.consult_info{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 22rpx;
}

.consult_info .qusetion{
  width: 36rpx;
  height: 36rpx;
  color: #fff;
  font-size: 28rpx;
  background: -moz-linear-gradient(top, #FE9542 0%, #FE5722 100%);
  background: -webkit-linear-gradient(top, #FE9542 0%,#FE5722 100%);
  background: -o-linear-gradient(top, #FE9542 0%,#FE5722 100%);
  background: -ms-linear-gradient(top, #FE9542 0%,#FE5722 100%);
  background: linear-gradient(to bottom, #FE9542 0%,#FE5722 100%);
  padding: 6rpx;
  margin-right: 20rpx;
  border-radius: 4rpx;
  text-align: center;
}

.consult_info .answer{
  width: 36rpx;
  height: 36rpx;
  color: #fff;
  font-size: 28rpx;
  background: -moz-linear-gradient(top, #9AC9FC 0%, #4EA2FC 100%);
  background: -webkit-linear-gradient(top, #9AC9FC 0%,#4EA2FC 100%);
  background: -o-linear-gradient(top, #9AC9FC 0%,#4EA2FC 100%);
  background: -ms-linear-gradient(top, #9AC9FC 0%,#4EA2FC 100%);
  background: linear-gradient(to bottom, #9AC9FC 0%,#4EA2FC 100%);
  padding: 6rpx;
  margin-right: 20rpx;
  border-radius: 4rpx;
  text-align: center;
}

.qusetion_content,.answer_content{
  color: #333;
  font-size: 28rpx;
  font-weight: 400;
}

.answer_time{
  margin-left: 76rpx;
}

.tips{
  width: 100%;
  height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}