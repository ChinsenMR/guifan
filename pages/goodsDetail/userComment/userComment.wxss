@import '../../../app.wxss';

.layout {
  background-color: #f7f7f7;
  padding-top: 215rpx;
  height: 100%;
  box-sizing: border-box;
}

.userComment {
  background-color: #f7f7f7;
}

.userComment .commoentImg {
  flex-wrap: wrap;
}

.userComment .commoentImg image {
  width: 150rpx !important;
  height: 150rpx !important;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  margin-right: 15rpx;
}

.commoentImg image:nth-of-type(3),
.commoentImg image:nth-of-type(6),
.commoentImg image:nth-of-type(9){
  margin-right: 0;
}

.userComment .goods-comment {
  background-color: #fff;
  padding: 30rpx 30rpx 15rpx 30rpx;
}

.userComment .goods-comment:first-child {
  margin-top: -30rpx;
}

.goods-comment {
  padding: 0 30rpx 30rpx 30rpx;
  background-color: #fff;
  margin: 20rpx 0;
}

.goods-commentH {
  height: 89rpx;
  margin-bottom: 10rpx;
}

.goods-commentH view:first-child {
  color: #333;
  font-size: 30rpx;
}

.goods-commentH view:last-child {
  color: #999;
  font-size: 26rpx;
}

.goods-commentH view:last-child text {
  margin-right: 30rpx;
}

