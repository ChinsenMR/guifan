.commoentInfo {
  color: #4A4A4A;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.commoentImg {
  margin-top: 20rpx;
}

.commoentImg image {
  width: 220rpx;
}

.userInfoImg{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.userName{
  color: #333;
  font-size: 28rpx;
}

.userInfo-grade{
  width: 129rpx;
  height: 30rpx;
  background-color: #333333;
  border-radius: 15rpx;
  margin-left: 16rpx;
}

.userInfo-grade image{
  width: 20rpx;
}

.userInfo-grade text{
  color: #FFDDBC;
  font-size: 26rpx;
  margin-left: 6rpx;
  height: 30rpx;
  padding-bottom: 6rpx;
  box-sizing:  border-box;
}

.userInfo-gradeStar{
  margin-top: 12rpx;
}

.userInfo-gradeStar image{
  width: 19rpx;
  margin-right: 9rpx;
}

.buyTime {
  color: #999;
  font-size: 26rpx;
  margin-top: 20rpx;
}

.empty{
  margin-top: 100rpx;
  color: #666;
  font-size: 28rpx;
}

.userInfoImgBox{
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.user_name{
  color: #666;
  font-size: 30rpx;
}

.sku_content{
  color: #999999;
  font-size: 26rpx;
  margin-top: 20rpx;
}

.compent_type{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.compent_type .compent_item{
  padding: 0.25rem 0.5rem;
  border: 1px solid #d7d7d7;
  color: #333;
  border-radius: 0.2rem;
  font-size: 0.6rem;
  margin-right: 0.75rem;
  margin-top: 0.5rem;
}

.compent_type  .compent_active{
  color: #ff5252;
  border: 1px solid #ff5252;
}