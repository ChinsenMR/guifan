page {
  background-color: #fff;
}

.bind-phone {
  padding: 190rpx 50rpx;
}

.bind-phone .title {
  font-size: 44rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 62rpx;
}

.bind-phone .tip {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 33rpx;
  margin-top: 14rpx;
}

.bind-phone .input-box {
  margin: 46rpx 0 46rpx 0;
  padding: 15rpx 0;
  border-bottom: 1px solid #eee;
}

.bind-phone .input-box-title {
  font-size: 28rpx;
  margin-right: 30rpx;
  width: 120rpx;
}

.bind-phone .input-box input,
.bind-phone .input-box .input-placeholder {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 45rpx;
}

.bind-phone .submit {
  background: #eeeeee;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}

.bind-phone .send-code {
  font-size: 24rpx;
}

.bind-phone .text-active {
  color: #ff4444;
}

.bind-phone .active {
  background: #ff4444;
  color: #fff;
}
